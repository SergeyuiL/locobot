<launch>

  <!-- Common Launch File Arguments -->
  <arg name="robot_model"                       default="locobot_wx250s"/>
  <arg name="base_type"                         default="$(optenv INTERBOTIX_XSLOCOBOT_BASE_TYPE kobuki)"/>
  <arg name="use_sim"                           default="false"/>

  <arg name="localization"                      default="false"/>
  <arg name="map_dir"                           default="$(find locobot)/maps/0326"/>
  <arg name="pure_run"                          default="false"/>
  <arg name="use_joy"                           default="false"/>
  <arg name="use_wit_imu"                       default="true"/>


  <!-- interbotix_xslocobot_control Launch File Arguments -->
  <arg name="robot_name"                        default="locobot"/>
  <arg name="show_gripper_bar"                  default="true"/>
  <arg name="show_gripper_fingers"              default="true"/>
  <arg name="external_urdf_loc"                 default=""/>
  <arg name="use_rviz"                          default="false"/>
  <arg name="rviz_frame"                        default="$(arg robot_name)/base_footprint"/>
  <arg name="use_base"                          default="true"/>
  <arg name="use_dock"                          default="false"/>
  <arg name="use_lidar"                         default="true"/>
  <arg name="show_lidar"                        default="$(arg use_lidar)"/>
  <arg name="use_camera"                        default="true"/>
  <arg name="filters"                           default="pointcloud"/>
  <arg name="align_depth"                       default="true"/>
  <arg name="color_fps"                         default="30"/>
  <arg name="color_width"                       default="640"/>
  <arg name="color_height"                      default="480"/>
  <arg name="depth_fps"                         default="30"/>
  <arg name="depth_width"                       default="640"/>
  <arg name="depth_height"                      default="480"/>
  <arg name="load_configs"                      default="true"/>

  <!-- static transform pub arguments -->
  <arg name="load_transforms"                   default="true"/>
  <arg name="transform_filepath"                default="$(find interbotix_xslocobot_perception)/config/static_transforms.yaml"/>

  <!-- IMU -->
  <include if="$(arg use_wit_imu)" file="$(find wit_ros_imu)/launch/wit_imu.launch"/>

  <!-- locobot basic -->
  <include file="$(find interbotix_xslocobot_control)/launch/xslocobot_control.launch">
    <arg name="robot_model"                       value="$(arg robot_model)"/>
    <arg name="robot_name"                        value="$(arg robot_name)"/>
    <arg name="show_gripper_bar"                  value="$(arg show_gripper_bar)"/>
    <arg name="show_gripper_fingers"              value="$(arg show_gripper_fingers)"/>
    <arg name="external_urdf_loc"                 value="$(arg external_urdf_loc)"/>
    <arg name="use_rviz"                          value="$(arg use_rviz)"/>
    <arg name="rviz_frame"                        value="$(arg rviz_frame)"/>
    <arg name="use_camera"                        value="$(arg use_camera)"/>
    <arg name="use_lidar"                         value="$(arg use_lidar)"/>
    <arg name="use_base"                          value="$(arg use_base)"/>
    <arg name="use_dock"                          value="$(arg use_dock)"/>
    <arg name="filters"                           value="$(arg filters)"/>
    <arg name="align_depth"                       value="$(arg align_depth)"/>
    <arg name="color_fps"                         value="$(arg color_fps)"/>
    <arg name="color_width"                       value="$(arg color_width)"/>
    <arg name="color_height"                      value="$(arg color_height)"/>
    <arg name="depth_fps"                         value="$(arg depth_fps)"/>
    <arg name="depth_width"                       value="$(arg depth_width)"/>
    <arg name="depth_height"                      value="$(arg depth_height)"/>
    <arg name="load_configs"                      value="$(arg load_configs)"/>
    <arg name="use_sim"                           value="$(arg use_sim)"/>
  </include>

  <group if="$(arg use_joy)">
    <!-- interbotix_xslocobot_joy Launch File Arguments -->
    <arg name="threshold"                         default="0.75"/>
    <arg name="controller"                        default="ps4"/>
    <arg if="$(eval robot_model == 'locobot_base')"     name="mode_type" value="base"/>
    <arg unless="$(eval robot_model == 'locobot_base')" name="mode_type" value="all"/>
    <arg name="mode_configs" default="$(find interbotix_xslocobot_joy)/config/modes_$(arg mode_type).yaml"/>

    <node
      pkg="joy"
      type="joy_node"
      name="ps3_joy"
      output="screen"
      ns="$(arg robot_name)">
      <param name="dev"                             value="/dev/input/js0"/>
      <remap from="joy"                             to="commands/joy_raw"/>
    </node>

    <node
      pkg="interbotix_xslocobot_joy"
      type="xslocobot_joy"
      name="xslocobot_joy"
      output="screen"
      ns="$(arg robot_name)">
      <param name="threshold"                       value="$(arg threshold)"/>
      <param name="controller"                      value="$(arg controller)"/>
    </node>

    <node
      pkg="interbotix_xslocobot_joy"
      type="xslocobot_robot"
      name="xslocobot_robot"
      output="screen"
      ns="$(arg robot_name)">
      <param name="robot_model"                     value="$(arg robot_model)"/>
      <param name="use_base"                        value="$(arg use_base)"/>
      <param name="base_type"                       value="$(arg base_type)"/>
    </node>

    <!-- my custom joy script -->
    <!-- <include file="$(find ps4_joy)/launch/ps4ctrler.launch"/> -->

  </group>


  <group unless="$(arg pure_run)">
    <!-- cartographer -->
    <!-- localization -->
    <group if="$(arg localization)">
      <include file="$(find locobot)/launch/carto_localization.launch">
          <arg name="map_dir" value="$(arg map_dir)" />
      </include>
    </group>

    <!-- mapping -->
    <group unless="$(arg localization)">
        <include file="$(find locobot)/launch/carto_slam.launch" />
    </group>

    <!-- move base -->
    <arg if="$(eval base_type == 'kobuki')"  name="move_base_cmd_vel_topic" default="mobile_base/commands/velocity"/>
    <arg if="$(eval base_type == 'create3')" name="move_base_cmd_vel_topic" default="/mobile_base/cmd_vel"/>

    <arg if="$(eval base_type == 'kobuki')"  name="odom_topic" default="mobile_base/odom"/>
    <arg if="$(eval base_type == 'create3')" name="odom_topic" default="/mobile_base/odom"/>

    <node
      pkg="move_base"
      type="move_base"
      respawn="false"
      name="move_base"
      output="screen"
      ns="$(arg robot_name)">
      <rosparam file="$(find locobot)/config/mvbase/local_costmap_all_params.yaml" command="load"/>
      <rosparam file="$(find locobot)/config/mvbase/global_costmap_all_params.yaml" command="load"/>
      <rosparam file="$(find locobot)/config/mvbase/common_costmap_params.yaml" command="load" ns="global_costmap"/>
      <rosparam file="$(find locobot)/config/mvbase/common_costmap_params.yaml" command="load" ns="local_costmap"/>
      <rosparam file="$(find locobot)/config/mvbase/local_planner_params.yaml"  command="load"/>
      <rosparam file="$(find locobot)/config/mvbase/global_planner_params.yaml" command="load"/>
      <rosparam file="$(find locobot)/config/mvbase/move_base_params.yaml"      command="load"/>

      <param name="global_costmap/robot_base_frame" value="$(arg robot_name)/base_footprint"/>
      <param name="local_costmap/global_frame"      value="$(arg robot_name)/odom"/>
      <param name="local_costmap/robot_base_frame"  value="$(arg robot_name)/base_footprint"/>

      <remap from="cmd_vel"                         to="$(arg move_base_cmd_vel_topic)"/>
      <remap from="map"                             to="/map"/>
      <remap from="odom"                            to="$(arg odom_topic)"/>
    </node>

  </group>


</launch>